{% liquid
	assign language_unit = ''
	assign route = routes.cart_url | split: '/cart' | first | remove: '/'
	assign checkDrop = shop.published_locales | where: 'primary', true
	assign check_rtl = false
	for locate in checkDrop
	  assign iso_code = locate.iso_code
	endfor
	for i in (1..6)
	  capture cap_language_unit
	    echo "lange_" | append: forloop.index
	  endcapture
	  capture cap_enable_rtl
	    echo "enable_rtl_lang_" | append: forloop.index
	  endcapture
	  assign enable_rtl = settings[cap_enable_rtl]
	  assign language_unit = settings[cap_language_unit]
	  if language_unit != ''
	    if route == ''
	      if enable_rtl and iso_code == language_unit
	        echo 'theme-styles-rtl.css' | asset_url | stylesheet_tag
	        assign check_rtl = true
	        continue
	      endif
	    else
	      if enable_rtl and route == language_unit
	        echo 'theme-styles-rtl.css' | asset_url | stylesheet_tag
	        assign check_rtl = true
	        continue
	      endif
	    endif
	  endif
	endfor
%}